extends ../layout/common

block content
	.form-group
		h1 Create user
		if errors
			each error in errors
				.alert.alert-danger= error
		form(action="/users/create", method="POST")
			lable(for="name") Name
			input.form-control#name(type="text", name="name", value= values ? values.name : "")
			lable(for="phone") Phone
			input.form-control#phone(type="text", name="phone", value= values ? values.phone : "")
			button.btn.btn-primary.mt-2 Create
