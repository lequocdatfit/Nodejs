extends ../layout/common

block content
	h1 Products

	form.ml-auto.mt-4(action="/products/search", method="GET")
		input.form-control(type="text", name="q", value= value? value: "")
		button.btn.btn-primary.mt-2 Search
	.d-flex.flex-wrap.tex-white.bg-secondary.mt-5
		each product in products
			.cl
				.card.mt-3.ml-4(style='width: 15rem; height: 35rem;')
					img.card-img-top(src= product.image, alt='product')
					.card-body
						h5.card-title #{product.name}
						p.card-text #{product.description}
						a.btn.btn-primary.mb-2(href='#') Go somewhere
